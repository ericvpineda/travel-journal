<!-- Travel landing page  -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Travel Journal</title>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  
  <body class="d-flex text-center text-white bg-dark">
    <div
      class="cover-container d-flex w-100 h-100 mx-auto flex-column"
      style="max-width: 80vw"
    >
      <header class="mb-auto pt-2">
        <div>
          <a class="header-footer float-md-start mb-0 h3-style" href="/">TJ</a>
          <nav class="nav nav-masthead justify-content-center float-md-end">
            <a href="/" class="nav-link active">Home</a>
            <a href="/travels" class="nav-link">All Travels</a>
            <% if (!currentUser) { %>
                <a href="/register" class="nav-link">Register</a>
            <a href="/login" class="nav-link">Login</a>
            <% } else { %>
            <a href="/logout" class="nav-link">Logout</a>
            <% } %>
          </nav>
        </div>
      </header>

      <main class="px-3">
        <h1>Travel Journal</h1>
        <p class="lead">
          Welcome <%= currentUser ? currentUser.username + "!" : "Traveler!" %>  
          <br>
          Come check out and review the Travels people have been.
          <br>
          Create your own profile to keep track of your own travels and share your journeys! 
        </p>
        <a
          href="/travels"
          class="btn btn-lg btn-secondary font-weight-bold text-white bg-dark"
          >View All Travels</a
        >
      </main>

      <footer class="footer mt-auto">
        <div class="d-flex py-3 text-muted ps-3">
          <span class="header-footer">&copyTravel Journal 2022</span>
        </div>
      </footer>
    </div>
  </body>
</html>
