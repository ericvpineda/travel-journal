<% layout('layout/boilerplate') %> 
      
  <h1 class="text-center m-5">Travel Journal</h1>
  
  <div class="container">
    <% for (let travel of allTravels) { %>
      <a href="/travels/<%= travel._id %>" class="text-dark" style="text-decoration: none;">
        <div class="card mb-3 p-3">
          <div class="row">
            <div class="col-md-3">
              <img src="<%= travel.img %> " class="img-fluid rounded-start">
            </div>
            <div class="col-md-9">
              <div class="card-body">
                <h5 class="card-title"><%= travel.title %> </h5>
                <p class="card-text"><%= travel.description %> </p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              </div>
            </div>
          </div>
        </div>
      </a>
    <% } %>
  </div>
    