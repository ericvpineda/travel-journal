<% layout('layout/boilerplate') %> 

<script src='https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.js'></script>
<link href='https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.css' rel='stylesheet' />
<!-- MDB -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.css" rel="stylesheet"/>
<!-- MDB -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/5.0.0/mdb.min.js"></script>

  <h1 class="text-center m-4">Community Log</h1>

  <div class="card shadow mb-3" style="border-radius: 10px;">
    <div id="map" style="width: 100%; height: 500px; border-radius: 10px;"></div>
  </div>
  
  <div class="infinite-scroll" data-mdb-infinite-direction="y" data-mdb-infinite-container="infinite-scroll-basic">
    <ul class="loading container list-group infinite-scroll infinite-scroll-basic" id="basic-example" style="max-height: 50rem; overflow-y: scroll">
  
    <% for (let travel of allTravels) { %>
    
          <a href="/travels/<%= travel._id %>" class="text-dark" style="text-decoration: none;">
            <div class="card mb-3 p-3">
              <div class="row">
                <div class="col-md-3">
                  <% if (travel.img.length) { %> 
                    <img src="<%= travel.img[0].url %> " class="img-fluid rounded-start">
                  <% } %> 
                  </div>
                <div class="col-md-9">
                  <div class="card-body">
                    <h5 class="card-title"><%= travel.title %> </h5>
                    <p class="card-text lead-sm"><%= travel.author.username %></p>
                    <p class="card-text"><%= travel.description %> </p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                  </div>
                </div>
              </div>
            </div>
          </a>  
    
    <% } %>
    </ul>
  </div>
  
<script>
  const mapboxToken = '<%- process.env.MAPBOX_TOKEN %>' 
  const allTravels = {features : <%- JSON.stringify(allTravels) %>}
</script>

<script src="/js/clusterMap.js"></script>
